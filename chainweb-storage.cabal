        , containers >=0.5
        , cryptonite >= 0.25
        , directory >=1.3
        , filepath
        , deepseq >=1.4
        , exceptions >=0.10
        , hashable >=1.2
        , lens >=4.16
        , memory >=0.14
        , nothunks >= 0.1.0.0
        , stm >=2.4
        , streaming >=0.2
        , temporary >=1.3
        , text >=1.2
        , transformers >=0.5
        , unordered-containers >=0.2
        , vector >=0.12

